@section Scripts {
    <script>
        // Function to add a new card
        function addCard() {
            var cardContainer = document.getElementById('card-container');
            var cardTemplate = document.querySelector('.card-template').cloneNode(true);
            cardTemplate.classList.remove('d-none'); // Show the cloned card
            cardContainer.appendChild(cardTemplate); // Append the cloned card
        }

        // Event listener for the Add Card button
        document.getElementById('add-card-btn').addEventListener('click', addCard);
    </script>
}
