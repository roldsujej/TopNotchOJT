<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - pcg</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body> 
    

    <header style="background-color: rgba(255, 255, 255, 0);">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom mb-3" style="background-color: #FFBC00; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">

            <!--nav bar color-->
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                    <!-- Example: aligning an image to the left -->
                    <img src="~/images/bg.png" alt="Logo" style="height: 50px; margin-right: 5px;"> <!-- Adjust height and margin as needed -->
                    <span class="brand-text">Variations - Top-Notch</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle btn text-white" onfocus="this.blur();" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">
                                Tasks
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1">
                                <a class="dropdown-item" asp-controller="Admin" asp-action="MyTask">My Task</a>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Pending">Pending</a>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="History">History</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle btn text-white" onfocus="this.blur();" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Site
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton2">
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Sites">Sites</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle btn text-white" onfocus="this.blur();" id="dropdownMenuButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Account
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton3">
                                <a class="dropdown-item" asp-controller="Admin" asp-action="ChangeInfo">Change Info</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Log Out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <style>
        /* Change font color to black on hover for dropdown items and navbar buttons */
        .navbar-nav .nav-link.btn:hover, .dropdown-item:hover {
            color: #000000; /* Black font color */
        }

        /* Hover effect for Tasks, Site, and Account buttons */
        .navbar-nav .nav-link.btn:hover {
            background-color: #FFFF00; /* Change to specific shade of yellow */
        }

        /* Font color for Tasks, Site, and Account buttons */
        .navbar-nav .nav-link.btn {
            color: #000000;
        }
    </style>


    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - pcg - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
