@model pcg.Models.VariationModel

@{
    ViewData["Title"] = "History";
}

<h1 style="text-align:center">History Log</h1>
<input class="form-control" type="text" id="search" placeholder="Search here">
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Log No.</th>
                <th class="text-center">Task No.</th>
                <th class="text-center">Assigned/Forwarded</th>
                <th class="text-center">Position</th>
                <th class="text-center">Added By</th>
                <th class="text-center">Status</th>
                <th class="text-center">Date Start</th>
                <th class="text-center">Date Forwarded</th>
                <th class="text-center">Date Received</th>
                <th class="text-center">Date Completed</th>
            </tr>
        </thead>
        <tbody id="myTable">
            <tr>
                <td class="text-center">kahoy</td>
                <td class="text-center">utos hindi</td>
                <td class="text-center">tinalaga abante</td>
                <td class="text-center">puwesto</td>
                <td class="text-center">dinagdag ni</td>
                <td class="text-center">kalagayan</td>
                <td class="text-center">nagsimula</td>
                <td class="text-center">inabante</td>
                <td class="text-center">natanggap</td>
                <td class="text-center">natapos</td>
            </tr>
            <!-- Add more table rows as needed -->
        </tbody>
    </table>
</div>

<style>
    /* Style the search input */
    #search {
        margin-bottom: 10px;
    }

    /* Style the table header */
    th {
        background-color: #343a40; /* Dark gray */
        color: white;
    }

    /* Style table cells */
    td {
        text-align: center;
    }

    /* Add hover effect to table rows */
    tbody tr:hover {
        background-color: #f2f2f2; /* Light gray */
    }

    /* Add border lines between table rows */
    tbody tr {
        border-bottom: 1px solid #dee2e6; /* Light gray */
    }
</style>
