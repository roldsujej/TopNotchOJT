@model pcg.Models.VariationModel

@{
    ViewData["Title"] = "Pending";
}

<h1 class="text-center mb-4">Pending Tasks</h1>
<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Task Details</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
            <tr onclick="toggleRows(this)">
                <td>
                    <div class="task-details">
                        <strong>Task:</strong> Spider Man
                    </div>
                    <div class="task-details">
                        <strong>Remarks:</strong> Iron Man
                    </div>
                    <div class="task-details">
                        <strong>Description:</strong> Hulk
                    </div>
                    <div class="task-details">
                        <strong>Added By:</strong> Hawkeye
                    </div>
                    <div class="task-details">
                        <strong>Date Start:</strong> Black Widow
                    </div>
                    <div class="task-details">
                        <strong>Date Forwarded:</strong> Captain America
                    </div>
                    <div class="task-details">
                        <strong>Date Received:</strong> Black Panther
                    </div>
                    <div class="task-details">
                        <strong>Date Completed:</strong> Thor
                    </div>
                    <div class="task-details">
                        <strong>Assigned To:</strong> Falcon
                    </div>
                </td>
                <td class="text-center align-middle">
                    <button type="submit" class="btn btn-primary btn-sm">Approve</button>
                </td>
            </tr>
            <!-- Additional rows here -->
        </tbody>
    </table>
</div>

<style>
    .task-details {
        margin-bottom: 5px;
    }

    .table-responsive {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow-x: auto;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0 10px;
        background-color: #fff;
        border-radius: 10px;
    }

        .table th, .table td {
            border: none;
        }

        .table th {
            color: #fff;
            background-color: #343a40;
            border-top: 1px solid #dee2e6;
        }

        .table td {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }

    .table-hover tbody tr:hover {
        background-color: #e2e6ea;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }

    .table-bordered thead th, .table-bordered thead td {
        border-bottom-width: 2px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
